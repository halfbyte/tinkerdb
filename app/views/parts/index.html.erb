<h1>Listing parts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Part no</th>
  </tr>

<% @parts.each do |part| %>
  <tr>
    <td><%=h part.name %></td>
    <td><%=h part.description %></td>
    <td><%=h part.part_no %></td>
    <td><%= link_to 'Show', part %></td>
    <td><%= link_to 'Edit', edit_part_path(part) %></td>
    <td><%= link_to 'Destroy', part, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New part', new_part_path %>